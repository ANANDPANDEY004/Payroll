<div class="content-wrapper">
  <div class="container">
    <div class="row">
      <div class="card border-primary" style="width:70rem;">
      <center><h1>Antier Chat</h1></center>
        <div class="card-body" id= "message-container" >
        
          <%=render @messages %>
        </div>
        <div class="input-group mb-8">
          <div class="form-group msg-form">
            <%= form_for(@message, html:{class:"form-horizontal", role:"form"}, url: message_path, :remote => true ) do |f| %>
              <%= f.text_field :body, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off' %>
              <%= f.submit  class: "btn btn-primary" %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
