<div class="content-wrapper">
  <div class="row justify-content">
    <div class="form-style-5">
      <%=form_with(model: @attandance,:local=>false ) do |f|%>
        <%= f.datetime_field :in_time ,min: Date.today ,max: Date.today+1 %>
        <%= f.submit"Check-In" %>
        <%= f.datetime_field :out_time ,min: Date.today ,max: Date.today+1 %>
        <%= f.submit"Checkout" %>
      <%end%>
    </div>
  </div>
</div>
